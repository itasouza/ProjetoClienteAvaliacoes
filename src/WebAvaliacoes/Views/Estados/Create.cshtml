@model WebAvaliacoes.ViewModels.EstadoViewModel

@{
    ViewData["Title"] = "Create";
}


<p>

</p>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card ribbon-box">
                <div class="card-body">
                    <div class="ribbon ribbon-primary float-left"><i class="mdi mdi-access-point mr-1"></i> Cadastro de Estado</div>
                    <h5 class="text-primary float-right mt-0"></h5>
                    <div class="ribbon-content">

                        <div class="col-lg-6">

                            <form  asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group mb-3">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="form-group col-sm-4">
                                        <label asp-for="Sigla" class="control-label"></label>
                                        <input asp-for="Sigla" class="form-control" />
                                        <span asp-validation-for="Sigla" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" asp-for="Ativo" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1"> @Html.DisplayNameFor(model => model.Ativo)</label>
                                    </div>
                                </div>


                                <div class="row">

                                    <div class="form-group col-sm-12">
                                        <input type="submit" value="Salvar" class="btn btn-primary" />
                                        <a asp-action="Index" class="btn btn-warning">Retornar</a>
                                    </div>
                                </div>


                            </form>
                        </div>

                    </div>
                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>

</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
